<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sample.netcipher"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NetCipherSampleActivity"
            android:label="@string/title_activity_onion_kit_sample" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.guardianproject.onionkit.ui.CertDisplayActivity"
            android:configChanges="locale|screenSize|orientation"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>